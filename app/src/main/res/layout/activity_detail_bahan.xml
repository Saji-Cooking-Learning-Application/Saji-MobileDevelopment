<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailBahanActivity">
    <ImageView
        android:id="@+id/iv_detailBahan"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/bahanterong"/>

    <TextView
        android:id="@+id/tv_judulResep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Terong"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_detailBahan" />

    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/desc"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_judulResep"
        app:layout_constraintTop_toBottomOf="@+id/tv_judulResep" />

    <TextView
        android:id="@+id/tv_isiDesc"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/isiDesc"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_deskripsi"
        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi" />

    <TextView
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:justificationMode="inter_word"
        android:text="Manfaat"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_isiDesc"
        app:layout_constraintTop_toBottomOf="@+id/tv_isiDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>